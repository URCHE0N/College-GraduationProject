<Window x:Class="RealEstateAgency.WelcomeWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RealEstateAgency"
        mc:Ignorable="d"
        Title="Информационная система риелторской компании" Height="400" Width="500" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize" Icon="/icon/icon.ico">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label FontSize="32" FontFamily="Times New Roman" FontWeight="Bold" Content="ДОБРО ПОЖАЛОВАТЬ" Margin="0, 10" HorizontalAlignment="Center"/>
            <Image Source="/icon/icon.ico" Height="150" HorizontalAlignment="Center"/>
            <Label FontSize="38" FontFamily="Times New Roman" FontWeight="Bold" Content="И.С.Р.К." Foreground="DarkRed" HorizontalAlignment="Center"/>
            <ProgressBar x:Name="LoadPb" Height="45" Width="370" Minimum="0" Maximum="100" Margin="0, 10" ValueChanged="LoadPb_ValueChanged"/>
        </StackPanel>
    </Grid>
</Window>
